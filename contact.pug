extends ./_layout.pug

block vars
	- var title = "Contact"
	- var description = "Contact us via email or form."
	- var page = 'contact'

block content
	
	.uk-section.uk-section-large
		.uk-container.uk-container-small.uk-margin-large.uk-text-center
			h1 #{title}
			p.uk-text-lead
				span.uk-icon.uk-margin-small-right(uk-icon="icon: mail")
				a(href="mailto:info@emphatic.cz") info@emphatic.cz
	.uk-section.uk-section-large.uk-section-muted
		.uk-container.uk-container-small.uk-margin-large
			.uk-width-xlarge.uk-margin-auto.uk-background-default.uk-padding.uk-box-shadow-medium
				form.uk-form-stacked(name="contact" method="POST" netlify)
					.uk-margin
						label.uk-form-label
							!='Your Name<em>*</em>'
						input.uk-input(type="text" placeholder="Your Full Name" name="name" required)
					.uk-margin
						label.uk-form-label
							!='Your Email<em>*</em>'
						input.uk-input(type="email" placeholder="Email" name="email" required)
					.uk-margin
						label.uk-form-label
							| Your Company Website
						input.uk-input(type="text" name="website")
					.uk-margin
						label.uk-form-label
							!='Subject<em>*</em>'
						input.uk-input(type="text" placeholder="How Can We Help?" name="subject" required)
					.uk-margin
						label.uk-form-label
							!='Your Message<em>*</em>'
						textarea.uk-textarea(type="textarea" rows="8" name="message" required)
					.uk-margin.uk-margin-remove-bottom
						button.uk-button.uk-button-primary.uk-button-large(type="submit")
							| Send
