include ../mixins/_footer-links.pug
include ../mixins/_footer-social-links.pug

.uk-navbar-container.tm-navbar-container(uk-sticky="show-on-up: true; animation: uk-animation-slide-top; media: 640")
	.uk-container
		nav(class="uk-navbar uk-visible@m")
			.uk-navbar-left
				a.uk-logo.uk-navbar-item(href="/" aria-label="Back to Homepage")
					img(src="/img/logo.svg" width="156" height="40" class="tm-logo" uk-svg)
			div(class="uk-navbar-center uk-visible@m")
				ul.uk-navbar-nav.tm-bolder.tm-spacing
					li(class=(page === 'expertise') ? "uk-active" : "")
						a(href="/expertise.html") Expertise
					li(class=(page === 'work') ? "uk-active" : "")
						a(href="/work.html") Work
					li(class=(page === 'about') ? "uk-active" : "")
						a(href="/about.html") About
					li(class=(page === 'contact') ? "uk-active" : "")
						a(href="/contact.html") Contact
			.uk-navbar-right
				div(class="uk-child-width-auto uk-grid-small" uk-grid)
						+footer-social-item('icon: linkedin;ratio: 0.8','https://www.linkedin.com/company-beta/2473132')
						+footer-social-item('icon: facebook;ratio: 0.8','https://www.facebook.com/')
						+footer-social-item('icon: twitter;ratio: 0.8','https://www.twitter.com/')
	
	//- Mobile Navigation
	div(class="tm-header-mobile uk-hidden@m")
		nav.uk-navbar-container.uk-navbar
			.uk-navbar-left
				a.uk-logo.uk-navbar-item(href="/")
					img(src="/img/logo.svg" width="156" height="40" class="tm-logo" uk-svg)
			.uk-navbar-right
				a(class="uk-navbar-toggle" href="#tm-mobile" uk-toggle="animation: true")
					span.uk-margin-small-right Menu
					div(uk-navbar-toggle-icon="" class="uk-navbar-toggle-icon uk-icon")
		.uk-position-relative.uk-position-z-index
			div(id="tm-mobile" class="uk-position-top" hidden)
				.uk-background-primary.uk-dark.uk-preserve-color.uk-padding.uk-text-center
					.uk-panel
						ul.uk-nav.uk-nav-primary.uk-nav-center
							li
								a(href="/expertise.html") Expertise
							li
								a(href="/work.html") Work
							li
								a(href="/about.html") About
							li
								a(href="/contact.html") Contact
						div(class="uk-flex uk-flex-center uk-margin-large-top uk-child-width-auto uk-grid-small" uk-grid)
							+footer-social-item('icon: linkedin;ratio: 1','https://www.linkedin.com/company/emphatic/')
							+footer-social-item('icon: facebook;ratio: 1','https://www.facebook.com/WeAreEmphatic/')
							+footer-social-item('icon: twitter;ratio: 1','https://twitter.com/WeAreEmphatic/')
